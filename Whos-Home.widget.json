{
    "template": "<style>\n\n  .container_frame{\n  \twidth:100%;\n  \tborder:solid 0px green;\n  \t\n  \ttext-align:center;\n  \tdisplay:inline-block;  \n  }\n  \n  .frame_main{\n  \twidth:{{config.whoshome_width}}px;\n\t\theight:{{config.whoshome_height}}px;\n  \tmargin:5px;\n  \tfont-size:{{config.whoshome_font_size}}px;\n  \tborder:solid 1px black;\n  \tdisplay:inline-block;\n  }\n  .frame_table{\n  \twidth:100%;\n  \tborder-spacing:10px;\n  \ttext-align:center;\n  \tborder:solid 0px blue;\n  }\n  .table_person{\n  \ttext-align:center;\n  margin-top:2px;\n  }\t\n td { \n    padding: 10px;\n}\n\n</style>\n\t\t<div class=\"container_frame\">\n      <div ng-if=\"(config.whoshome_heading != '')\">\n          <div><h4>{{config.whoshome_heading}}</h4></div>\n      </div>\n      <div ng-repeat=\"item in (itemsInGroup(config.whoshome_GroupItem)) | filter:(config.whoshome_hideaway && {state:'ON'})\" class=\"frame_main\">\n        <table class=\"frame_table\">\n          <tr ng-if=\"(config.whoshome_show_name)\">\n            <th class=\"table_person\">{{item.label}}</th>\n          </tr>\n          <tr ng-if=\"(config.whoshome_show_icon && item.category != '' && config.whoshome_iconset != '')\">\n            <td class=\"table_icon\"><widget-icon iconset=\"config.whoshome_iconset\" icon=\"item.category.toLowerCase()\" size=\"config.whoshome_iconsize\" backdrop=\"false\" center=\"true\" inline=\"false\" state=\"itemState(itemname)\"></td>\n          </tr>\n          <tr ng-if=\"(config.whoshome_show_state)\">\n            <td class=\"table_state\">{{itemState(item.name)}}</td>\n          </tr>\n        </table>\n    </div>\n   </div>",
    "name": "Who's Home",
    "author": "Crispin",
    "description": "Compact display showing who is home",
    "settings": [
        {
            "type": "item",
            "id": "whoshome_GroupItem",
            "label": "People Group",
            "description": "Group containing switch items of people"
        },
        {
            "type": "string",
            "id": "whoshome_heading",
            "label": "Heading",
            "default": "Who's Home",
            "description": "Heading to display. Blank for no heading."
        },
        {
            "type": "string",
            "id": "whoshome_iconset",
            "label": "Icon Set",
            "default": "eclipse-smarthome-classic",
            "description": "Iconset to display"
        },
        {
            "type": "number",
            "id": "whoshome_iconsize",
            "label": "Icon Size",
            "default": "32",
            "description": "Icon Size in pixels"
        },
        {
            "type": "number",
            "id": "whoshome_height",
            "label": "Box height",
            "default": "120",
            "description": "Box height in pixels"
        },
        {
            "type": "number",
            "id": "whoshome_width",
            "label": "Box width",
            "default": "120",
            "description": "Box height in pixels"
        },
        {
            "type": "number",
            "id": "whoshome_font_size",
            "label": "Font Size",
            "default": "10",
            "description": "Font size in pixels"
        },
        {
            "type": "checkbox",
            "id": "whoshome_show_icon",
            "label": "Show Icon",
            "default": true,
            "description": "Show Icon in widget"
        },
        {
            "type": "checkbox",
            "id": "whoshome_show_name",
            "label": "Show Name",
            "default": true,
            "description": "Show name of person"
        },
        {
            "type": "checkbox",
            "id": "whoshome_show_state",
            "label": "Show State",
            "default": true,
            "description": "Show State"
        },
        {
            "type": "checkbox",
            "id": "whoshome_hideaway",
            "label": "Hide people who are away",
            "description": "Hide people if they are not home"
        }
    ]
}